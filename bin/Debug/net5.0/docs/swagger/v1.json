        "tags": [
                {
                        "name": "auth",
                        "description": "handle authentication"
                },
                {
                        "name": "user",
                        "description": "service for user"
                },
                {
                        "name": "admin",
                        "description": "service for administrator, have to login and with role is ADMIN"
                }
        ],
        "servers": [
                {
                        "url": "http://localhost:4000",
                        "description": "Development server"
                }
        ],
        "paths": {
                "/api/user/password": {
                        "put": {
                                "tags": ["auth"],
                                "description": "Update user password",
                                "requestBody": {
                                        "content": {
                                                "form-data": {
                                                        "schema": {
                                                                "type": "object",
                                                                "properties": {
                                                                        "password": {
                                                                                "type": "string",
                                                                                "example": "1234567"
                                                                        },
                                                                        "newPassword":{
                                                                                "type":"string",
                                                                                "example":"123456789"
                                                                        },
                                                                        "confirmPassword":{
                                                                                "type":"string",
                                                                                "example":"123456789"
                                                                        }
                                                                }
                                                        }
                                                }
                                        }
                                },
                                "responses": {
                                        "200": {
                                                "description": "Update success",
                                                "content": {
                                                        "application/json": {
                                                                "schema": {
                                                                        "type": "object",
                                                                        "properties": {
                                                                                "message":{
                                                                                        "type": "string",
                                                                                        "example":"Update User password successfully"
                                                                                }
                                                                        }
                                                                }
                                                        }
                                                }
                                        },
                                        "400": {
                                                "description": "Bad Request",
                                                "content": {
                                                        "application/json": {
                                                                "schema": {
                                                                        "type": "object",
                                                                        "properties": {
                                                                                "errorMessage":{
                                                                                        "type": "string",
                                                                                        "example":"Password is wrong"
                                                                                }
                                                                        }
                                                                }
                                                        }
                                                }
                                        }
                                }
                        }
                }
        },
        "components": {
                "schemas": {}
        }
}
